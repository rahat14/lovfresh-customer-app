<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/frame_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ri_shop_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/blank_img" />

        <TextView
            android:id="@+id/tv_product_nm"
            style="@style/testHeadingNormalStyle"
            android:layout_below="@+id/ri_shop_img"
            android:layout_marginTop="10dp"
            android:text="Fat Apple Shop"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/testHeadingNormalStyle"
            android:layout_below="@+id/tv_product_nm"
            android:text="Address"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:textSize="14sp" />



    </RelativeLayout>

    <View
        android:id="@+id/view1"
        style="@style/viweLineStyle"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        />
</androidx.cardview.widget.CardView>