<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dotted"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/rb_select"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/rb_select"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_promo_code"
                style="@style/testsecondStyle"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:text="LOVFRESH" />

            <TextView
                android:id="@+id/tv_promo_name"
                style="@style/testsecondStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:text="HOLI OFFER"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_save_ruppes"
                style="@style/testsecondStyle"
                android:layout_width="wrap_content"
                android:text="50"
                android:textColor="@color/grenn"
                android:textSize="10sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>